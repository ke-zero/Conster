@namespace Conster.Application.Components.Partials

<PageTitle>@Env.APP_NAME | @Title</PageTitle>
<div class="w-full h-auto flex flex-col items-start justify-start gap-2 p-2">
    <h1 class="text-2xl m-1 capitalize font-bold">@Title</h1>
    <p class="text-sm ml-5">@Description</p>
</div>

@code {
    [Parameter] public required string Title { get; set; }
    [Parameter] public required string Description { get; set; }
}