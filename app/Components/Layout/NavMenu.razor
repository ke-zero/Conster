@using System.Collections.Generic;
@using System.Reflection

@{
    List<(string name, string link, bool external)> Links =
    [
        ("Dashboard", "/", false),
        ("Cluster", "/cluster", false),
        ("Template", "/template", false),
        ("Session", "/session", false),
        ("Analytic", "/analytic", false),
        ("Setting", "/setting", false),
    ];
}

<nav class="flex flex-col gap-2">
    <span class="text-[#6464c8] font-bold text-3xl text-center w-full py-3">Conster</span>
    @foreach (var link in Links)
    {
        <a class="text-[14px] font-bold p-2" href="@link.link" target=@(link.external ? "_blank" : "_self")>@link.name</a>
    }
</nav>